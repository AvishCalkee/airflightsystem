<mvc:View id="AirFlightList" controllerName="fiori.bootcamp.airflightsystem.controller.AirFlightList"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:st="sap.ui.comp.smarttable"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
	xmlns:svm="sap.ui.comp.smartvariants">
    <f:DynamicPage id="AirFlightListPageId">
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<svm:SmartVariantManagement id="PageVariantId" showExecuteOnSelection="true" />
					</f:heading>
				</f:DynamicPageTitle>
			</f:title>
			<f:header>
				<f:DynamicPageHeader>
					<f:content>
						<sfb:SmartFilterBar
							id="smartFilterBar"
							entitySet="AirlineSet"
							search="onSearch">
							<sfb:controlConfiguration>
								<sfb:ControlConfiguration key="1" label="{i18n>departureAirport}">
								<sfb:customControl>
									<m:MultiComboBox
										id="departureId"
										selectionChange="customFieldChange">
										<core:Item key="1" text="Mauritius"/>
										<core:Item key="2" text="Paris"/>
										<core:Item key="3" text="Rome"/>
										<core:Item key="4" text="Dubai"/>
										<core:Item key="5" text="Istanbul"/>
									</m:MultiComboBox>
								</sfb:customControl>
							</sfb:ControlConfiguration>
							<sfb:ControlConfiguration key="2" label="{i18n>arrivalAirport}">
								<sfb:customControl>
									<m:MultiComboBox
										id="arrivalId"
										selectionChange="customFieldChange">
										<core:Item key="1" text="Mauritius"/>
										<core:Item key="2" text="Paris"/>
										<core:Item key="3" text="Rome"/>
										<core:Item key="4" text="Dubai"/>
										<core:Item key="5" text="Istanbul"/>
									</m:MultiComboBox>
								</sfb:customControl>
							</sfb:ControlConfiguration>

							</sfb:controlConfiguration>
						</sfb:SmartFilterBar>
						
					</f:content>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<st:SmartTable
					id="smartTable"
					entitySet="AirlineSet"
					smartVariant="PageVariantId"
					smartFilterId="smartFilterBar"
					beforeRebindTable="onBeforeRebindTable"
					tableType="Table"
					enableAutoColumnWidth="true"
					useTablePersonalisation="true"
					header="{i18n>airFlight}"
					showRowCount="true">
					<st:layoutData>
						<m:FlexItemData growFactor="1" baseSize="0%"/>
					</st:layoutData>
				</st:SmartTable>
			</f:content>
		</f:DynamicPage>
</mvc:View>
